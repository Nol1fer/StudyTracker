@model List<StudyTracker.Models.Task>
@{
    ViewData["Title"] = "Задания курса";
    int courseId = (int)ViewBag.CourseId;
}

<h2>Задания курса</h2>
<p>
    <a asp-action="Create" asp-route-courseId="@courseId" class="btn btn-primary">Добавить задание</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Дедлайн</th>
            <th>Статус</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.Deadline.ToString("dd.MM.yyyy")</td>
                <td>@task.Status</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@task.Id" class="btn btn-sm btn-warning">Редактировать</a>
                    <a asp-action="Delete" asp-route-id="@task.Id" class="btn btn-sm btn-danger">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="Course" asp-action="Index" class="btn btn-secondary">Назад к курсам</a>