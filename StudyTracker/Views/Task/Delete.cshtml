@model StudyTracker.Models.Task
@{
    ViewData["Title"] = "Удалить задание";
}

<h2>Удалить задание</h2>
<hr />

<div class="alert alert-warning">
    <h4>Вы уверены, что хотите удалить это задание?</h4>
    <dl class="row">
        <dt class="col-sm-2">Название:</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Дедлайн:</dt>
        <dd class="col-sm-10">@Model.Deadline.ToString("dd.MM.yyyy HH:mm")</dd>

        <dt class="col-sm-2">Статус:</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="CourseId" />

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-danger">Удалить</button>
        <a asp-action="Index" asp-route-courseId="@Model.CourseId" class="btn btn-secondary">Отмена</a>
    </div>
</form>